<Window x:Class="CopyFileTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyFileTool" 
        mc:Ignorable="d"
        Title="拷贝文件小工具" Height="320" Width="400" WindowStartupLocation="CenterScreen" Icon="/Res/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <local:ControlCopyFile ControlIndex="0" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="2,2,2,2" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
        <local:ControlCopyFile ControlIndex="1" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="2,2,2,2" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="1" />
    </Grid>
</Window>
